{
  "private": true,
  "name": "peppermint",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/react": "18.2.38",
    "@types/react-dom": "^18",
    "docs": "workspace:*",
    "eslint": "^8",
    "eslint-config-next": "14",
    "prettier": "^2.5.1",
    "turbo": "^2.0.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.5",
  "resolutions": {
    "prosemirror-view": "1.33.9"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "fastify": "^5.1.0",
    "next": "^14.2.15",
    "nextra": "^3.0.15",
    "nextra-theme-docs": "^3.0.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
